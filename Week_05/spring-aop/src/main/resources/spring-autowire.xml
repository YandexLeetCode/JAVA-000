    <bean id="userDao" class="com.geekbang.springaop.annotation.UserDaoImpl"/>
    <bean id="userService" class="com.geekbang.springaop.annotation.UserServiceImpl" autowire="byName"/>
    <bean id="userController" class="com.geekbang.springaop.annotation.UserController" autowire="byName"/>
